#Função que calcula perimetro e area dos valores de base e altura

def perimetro(b, h):
  p = 2 * b + 2 * h
  return p

def area(b, h):
  a = b * h
  return a

base = float(input("Informe a base: "))
alt = float(input("Informe a altura: "))
per = perimetro(base, alt)
ar = area(base, alt)

print("perimetro: ", per)
print("area: ", ar)
